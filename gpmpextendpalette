VERSION="2012-04-03 15:18:20-04:00"

if [ -z "${1}" ];
then
	echo
	echo "gpmpextendpalette version ${VERSION}"
	echo
	echo "Extend the palette in .mp file generated by gnuplot metapost terminal."
	echo "The palette in .mp file generated by gnuplot metapost terminal has only 8 colors."
	echo "This tool extends this palette to 15 colors."
	echo
	echo "Usage: gpmpextendpalette <.mp file generated by gnuplot>"
	echo
	exit
fi
if [ ! -f ${1} ];
then
	echo "File ${1} does not exist."
	exit 1
fi

sed -i~ 's/col4:=0\?\.85\*green;/col4:=.45*green;/
s/col6:=0\?\.85\*cyan;/col6:=.8*white;/
s/col7:=0\?\.85\*yellow;/col7:=.75*yellow;\ncol8:=.85*green;\ncol9:=.85*cyan;\ncol10:=.6*red;\ncol11:=(.4,.7,.4);\ncol12:=.6*magenta;\ncol13:=(0,.5,1.0);\ncol14:=.5*blue;/' ${1}

