VERSION='2012-04-16 00:09:22-04:00'

if [ -z "${1}" ];
then
	echo
	echo "makedependgp version ${VERSION}"
	echo
	echo "Generate dependency file from gnuplot script to include in Makefile."
	echo
	echo "Usage: makedependgp <gnuplot script file name>"
	echo
	exit
fi
if [ ! -f ${1} ];
then
	echo "File ${1} does not exist."
	exit 1
fi

dependfile=`echo ${1} | sed 's/\(\.[^\.]*\)\?$/.d/'`
outputfile=`sed -n 's/^set output ['\''"]\(.*\)['\''"]/\1/p' ${1}`

# find data files
cat ${1} | sed ':a;N;$!ba;s/\\\r\?\n/ /g' | sed -n 's/^[[:blank:]]*\(plot.*\)/\1,/p' | sed 's/[^'\'']*'\''\([^'\'']*\)'\''[^,]*,/\1\n/g' > ${dependfile}

sort -u ${dependfile} -o ${dependfile}~
paste -s --delimiters=" " ${dependfile}~ > ${dependfile}
sed "s/^.*$/# Generated by makedependgp version ${VERSION}\n# Generated at `date`\n\n${outputfile} : &\n/" < ${dependfile} > ${dependfile}~
mv ${dependfile}~ ${dependfile}

